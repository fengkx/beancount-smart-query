{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "importHelpers": true,
    "module": "ES2022",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    // needed by tsyringe
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "files": ["tests/setup.d.ts"],
  "include": ["src/**/*"]
}
